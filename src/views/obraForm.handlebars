<div class="content-wrapper">
  <div class="page-header">
    <h1>{{#if (eq action 'create')}}üèóÔ∏è Nova Obra{{else}}‚úèÔ∏è Editar Obra{{/if}}</h1>
    <div class="page-actions">
      <a href="/obras" class="btn-voltar">‚Üê Voltar</a>
    </div>
  </div>

  <div class="form-wrapper">
    <form action="{{#if (eq action 'create')}}/obras{{else}}/obras/{{obra.id}}{{/if}}" method="POST" class="obra-form">

      <div class="form-group">
        <label for="nome_obra">Nome da Obra *</label>
        <input type="text" id="nome_obra" name="nome_obra" value="{{obra.nome_obra}}" placeholder="Digite o nome da obra" required>
      </div>

      <div class="form-group">
        <label for="usuario_id">Cliente (Opcional)</label>
        <select id="usuario_id" name="usuario_id">
          <option value="">-- Selecione um cliente --</option>
          {{#each usuarios}}
            <option value="{{id}}" {{#if (eq ../obra.usuario_id id)}}selected{{/if}}>
              {{nome}} - {{obra}}
            </option>
          {{/each}}
        </select>
        <small class="form-hint">
          Vincular a obra a um cliente existente. Deixe em branco para obra independente.
        </small>
      </div>

      <div class="form-group">
        <label for="descricao">Descri√ß√£o (Opcional)</label>
        <textarea id="descricao" name="descricao" rows="4" placeholder="Digite uma descri√ß√£o detalhada da obra">{{obra.descricao}}</textarea>
      </div>

      <div class="form-actions">
        <a href="/obras" class="btn-cancel">Cancelar</a>
        <button type="submit" class="btn-submit">
          {{#if (eq action 'create')}}‚úÖ Criar Obra{{else}}üíæ Salvar Altera√ß√µes{{/if}}
        </button>
      </div>
    </form>
  </div>
</div>

