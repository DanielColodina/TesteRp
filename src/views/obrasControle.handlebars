<div class="controle-layout">
  <aside class="sidebar sidebar-closed">
    <div class="sidebar-header">
      <div class="logo">RP <i class="fas fa-building"></i></div>
    </div>
    <nav class="sidebar-nav">
      <a href="/dashboard" class="nav-item">
        <i class="fas fa-chart-bar"></i> Dashboard
      </a>
      <a href="/dashboard/usuarios" class="nav-item">
        <i class="fas fa-users"></i> Usuários
      </a>
      <a href="/dashboard/obras" class="nav-item">
        <i class="fas fa-building"></i> Obras
      </a>
      <a href="/dashboard/progresso" class="nav-item">
        <i class="fas fa-chart-line"></i> Progresso
      </a>
      <a href="/dashboard/controle-geral" class="nav-item">
        <i class="fas fa-cogs"></i> Controle
      </a>
      <a href="/dashboard/historico" class="nav-item">
        <i class="fas fa-scroll"></i> Histórico
      </a>
      <a href="/dashboard/auditoria" class="nav-item">
        <i class="fas fa-lock"></i> Auditoria
      </a>
    </nav>
    <div class="sidebar-footer">
      <a href="/logout" class="btn-logout">Sair</a>
    </div>
  </aside>

  <main class="main-content sidebar-closed">
    <div class="top-bar">
      <button class="sidebar-toggle">
        <i class="fas fa-bars"></i>
      </button>
      <h1><i class="fas fa-building"></i> Gestão de Obras</h1>
      <a href="/dashboard/controle-geral" class="btn-primary-top">← Voltar</a>
    </div>

    <div class="controle-container">
      <div style="text-align: right; margin-bottom: 20px;">
        <a href="#form" class="btn-novo">+ Nova Obra</a>
      </div>

    <!-- Formulário de Nova Obra -->
    <div id="form" class="form-container glass-widget">
        <h2><i class="fas fa-plus"></i> Cadastrar Nova Obra</h2>
        <form action="/controle-geral/obras" method="POST" class="obra-form">
            <div class="form-grid">
                <div class="form-group">
                    <label for="obra_id">Obra *</label>
                    <select id="obra_id" name="obra_id" required onchange="preencherObra()">
                        <option value="">Selecione uma obra...</option>
                        {{#each obras}}
                        <option value="{{this.id}}">{{this.nome}}</option>
                        {{/each}}
                    </select>
                </div>

                <div class="form-group">
                    <label for="endereco">Endereço</label>
                    <input type="text" id="endereco" name="endereco" placeholder="Rua, número, bairro, cidade">
                </div>

                <div class="form-group">
                    <label for="cliente">Cliente *</label>
                    <input type="text" id="cliente" name="cliente" required placeholder="Nome do cliente">
                </div>

                <div class="form-group">
                    <label for="orcamento">Orçamento (R$)</label>
                    <input type="number" id="orcamento" name="orcamento" step="0.01" placeholder="0.00">
                </div>

                <div class="form-group">
                    <label for="data_inicio">Data de Início</label>
                    <input type="date" id="data_inicio" name="data_inicio">
                </div>

                <div class="form-group">
                    <label for="data_fim">Data de Fim</label>
                    <input type="date" id="data_fim" name="data_fim">
                </div>

                <div class="form-group">
                    <label for="status">Status</label>
                    <select id="status" name="status">
                        <option value="ativo">Ativo</option>
                        <option value="pausado">Pausado</option>
                        <option value="finalizado">Finalizado</option>
                    </select>
            </div>

            </div>

            <div class="form-actions">
                <button type="submit" class="btn-submit"><i class="fas fa-save"></i> Salvar Obra</button>
                <button type="button" class="btn-cancel" onclick="limparFormulario()"><i class="fas fa-trash"></i> Limpar</button>
            </div>
        </form>
    </div>

    <!-- Lista de Obras -->
    <div class="obras-grid">
        {{#each obras}}
        <div class="obra-card glass-widget">
            <div class="obra-header">
                <h3 class="obra-title">{{this.nome}}</h3>
                <span class="obra-status status-{{this.status}}">{{this.status}}</span>
            </div>

            <div class="obra-info">
                <div class="obra-info-item">
                    <span class="obra-info-label">Cliente</span>
                    <span class="obra-info-value">{{this.cliente}}</span>
                </div>
                <div class="obra-info-item">
                    <span class="obra-info-label">Endereço</span>
                    <span class="obra-info-value">{{this.endereco}}</span>
                </div>
                <div class="obra-info-item">
                    <span class="obra-info-label">Orçamento</span>
                    <span class="obra-info-value">R$ {{this.orcamento}}</span>
                </div>
                <div class="obra-info-item">
                    <span class="obra-info-label">Data Início</span>
                    <span class="obra-info-value">{{this.data_inicio}}</span>
                </div>
                <div class="obra-info-item">
                    <span class="obra-info-label">Data Fim</span>
                    <span class="obra-info-value">{{this.data_fim}}</span>
                </div>
            </div>

            <div class="obra-actions">
                <a href="/dashboard/controle-geral/estoque/obra/{{this.id}}" class="btn-materiais"><i class="fas fa-box"></i> Materiais</a>
                <a href="/dashboard/controle-geral/obras/edit/{{this.id}}" class="btn-edit">Editar</a>
                <form action="/dashboard/controle-geral/obras/delete/{{this.id}}" method="POST" style="display:inline;">
                    <button type="submit" class="btn-delete" onclick="return confirm('Tem certeza que deseja excluir esta obra?')">Excluir</button>
                </form>
            </div>
        </div>
        {{/each}}
    </div>

      {{#if (eq obras.length 0)}}
      <div class="glass-widget" style="text-align: center; padding: 40px;">
          <h3 style="color: var(--text-primary); margin: 0;">Nenhuma obra cadastrada ainda</h3>
          <p style="color: var(--text-secondary); margin: 10px 0 0 0;">Clique em "Nova Obra" para começar.</p>
      </div>
      {{/if}}
    </div>
  </main>
</div>

<script>
const obrasData = [
{{#each obras}}
    {
        id: {{this.id}},
        nome: "{{this.nome}}",
        endereco: "{{this.endereco}}",
        cliente: "{{this.cliente}}",
        orcamento: {{this.orcamento}},
        data_inicio: "{{this.data_inicio}}",
        data_fim: "{{this.data_fim}}",
        status: "{{this.status}}"
    }{{#unless @last}},{{/unless}}
{{/each}}
];

function preencherObra() {
    const select = document.getElementById('obra_id');
    const obraId = select.value;
    const obra = obrasData.find(o => o.id == obraId);

    if (obra) {
        document.getElementById('endereco').value = obra.endereco || '';
        document.getElementById('cliente').value = obra.cliente || '';
        document.getElementById('orcamento').value = obra.orcamento || '';
        document.getElementById('data_inicio').value = obra.data_inicio || '';
        document.getElementById('data_fim').value = obra.data_fim || '';
        document.getElementById('status').value = obra.status || '';
    } else {
        document.getElementById('endereco').value = '';
        document.getElementById('cliente').value = '';
        document.getElementById('orcamento').value = '';
        document.getElementById('data_inicio').value = '';
        document.getElementById('data_fim').value = '';
        document.getElementById('status').value = '';
    }
}

function limparFormulario() {
    document.querySelector('.obra-form').reset();
    preencherObra(); // Reset to empty
}
</script>

