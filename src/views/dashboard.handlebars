                            <option value="Andamento">Andamento</option>
                            <option value="Feito">Feito</option>
                        </select>
                    </div>

                    <div class="checklist-item-modal">
                        <label for="modal_condominio">Condomínio:</label>
                        <select id="modal_condominio" name="condominio">
                            <option value="Nao Tem" selected>Não Tem</option>
                            <option value="Andamento">Andamento</option>
                            <option value="Feito">Feito</option>
                        </select>
                    </div>

                    <div class="checklist-item-modal">
                        <label for="modal_habite_se">Habite-se:</label>
                        <select id="modal_habite_se" name="habite_se">
                            <option value="Nao Tem" selected>Não Tem</option>
                            <option value="Andamento">Andamento</option>
                            <option value="Feito">Feito</option>
                        </select>
                    </div>

                    <div class="checklist-item-modal">
                        <label for="modal_averbacao">Averbação:</label>
                        <select id="modal_averbacao" name="averbacao">
                            <option value="Nao Tem" selected>Não Tem</option>
                            <option value="Andamento">Andamento</option>
