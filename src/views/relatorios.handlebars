              <div class="relatorio-header">
                <h3 class="relatorio-titulo">{{this.titulo}}</h3>
                <span class="relatorio-tipo-badge {{#if (eq this.tipo 'financeiro')}}tipo-financeiro{{else if (eq this.tipo 'progresso')}}tipo-progresso{{else if (eq this.tipo 'equipe')}}tipo-equipe{{else if (eq this.tipo 'estoque')}}tipo-estoque{{else}}tipo-geral{{/if}}">
