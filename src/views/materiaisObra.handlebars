<div class="obras-container">
    <div class="obras-header">
        <h1>üì¶ Materiais da Obra</h1>
        <a href="/dashboard/controle-geral/obras" class="btn-voltar">‚Üê Voltar</a>
    </div>

    <div style="text-align: center; margin-bottom: 20px;">
        <a href="/dashboard/controle-geral" class="btn-voltar">‚Üê Voltar ao Controle Geral</a>
    </div>

    {{#if obra}}
    <div class="form-container">
        <h2>üèóÔ∏è {{obra.nome_obra}}</h2>
        <div style="display: grid; grid-template-columns: repeat(auto-fit, minmax(200px, 1fr)); gap: 15px; margin-bottom: 20px;">
            <div>
                <label style="color: #666; font-weight: 600;">Endere√ßo</label>
                <p style="margin: 5px 0 0 0; color: #333; font-weight: 600;">{{obra.endereco}}</p>
            </div>
            <div>
                <label style="color: #666; font-weight: 600;">Cliente</label>
                <p style="margin: 5px 0 0 0; color: #333; font-weight: 600;">{{obra.cliente}}</p>
            </div>
        </div>
    </div>
    {{/if}}

    <!-- Tabela de Materiais -->
    <div class="form-container">
        <h3 style="margin-top: 0;">üìã Cat√°logo de Materiais</h3>
        
        <!-- Formul√°rio para adicionar material -->
        <div class="adicionar-material">
            <h4>‚ûï Adicionar Material √† Obra</h4>
            <form action="/dashboard/controle-general/estoque/obra/{{obra_id}}/adicionar" method="POST" style="display: grid; grid-template-columns: repeat(auto-fit, minmax(150px, 1fr)); gap: 15px; align-items: end;">
                <div>
                    <label style="display: block; margin-bottom: 5px; font-weight: 600; color: #333;">Material</label>
                    <select name="material_id" required style="width: 100%; padding: 10px; border: 2px solid #FFC300; border-radius: 8px; font-size: 1rem;">
                        <option value="">Selecione um material</option>
                        {{#each materiais}}
                        <option value="{{this.id}}">{{this.nome}}</option>
                        {{/each}}
                    </select>
                </div>
                <div>
                    <label style="display: block; margin-bottom: 5px; font-weight: 600; color: #333;">Qtd. Estimada</label>
                    <input type="number" name="quantidade_estimada" step="0.01" placeholder="0" style="width: 100%; padding: 10px; border: 2px solid #FFC300; border-radius: 8px; font-size: 1rem;">
                </div>
                <div>
                    <label style="display: block; margin-bottom: 5px; font-weight: 600; color: #333;">Qtd. Inicial</label>
                    <input type="number" name="quantidade_inicial" step="0.01" placeholder="0" style="width: 100%; padding: 10px; border: 2px solid #FFC300; border-radius: 8px; font-size: 1rem;">
                </div>
                <div>
                    <label style="display: block; margin-bottom: 5px; font-weight: 600; color: #333;">Fase da Obra</label>
                    <select name="fase_obra" style="width: 100%; padding: 10px; border: 2px solid #FFC300; border-radius: 8px; font-size: 1rem;">
                        <option value="">Selecione</option>
                        <option value="Funda√ß√£o">Funda√ß√£o</option>
                        <option value="Estrutura">Estrutura</option>
                        <option value="Alvenaria">Alvenaria</option>
                        <option value="Instala√ß√µes">Instala√ß√µes</option>
                        <option value="Acabamento">Acabamento</option>
                        <option value="Finaliza√ß√£o">Finaliza√ß√£o</option>
                    </select>
                </div>
                <div>
                    <button type="submit" style="width: 100%; padding: 12px; background: linear-gradient(135deg, #FFC300, #FFD700); border: none; border-radius: 8px; color: #1a1a1a; font-weight: 700; cursor: pointer; font-size: 1rem;">Adicionar</button>
                </div>
            </form>
        </div>
        
        {{#if materiais}}
        <div style="overflow-x: auto; margin-top: 20px;">
            <table style="width: 100%; border-collapse: collapse;">
                <thead>
                    <tr style="background: #f3f4f6; border-bottom: 2px solid #FFC300;">
                        <th style="padding: 12px; text-align: left; font-weight: 600; color: #333;">Item</th>
                        <th style="padding: 12px; text-align: left; font-weight: 600; color: #333;">Descri√ß√£o</th>
                        <th style="padding: 12px; text-align: left; font-weight: 600; color: #333;">Unidade</th>
                        <th style="padding: 12px; text-align: left; font-weight: 600; color: #333;">Quantidade</th>
                    </tr>
                </thead>
                <tbody>
                    {{#each materiais}}
                    <tr style="border-bottom: 1px solid #e5e7eb;">
                        <td style="padding: 12px; color: #333;">{{this.nome_item}}</td>
                        <td style="padding: 12px; color: #666;">{{this.descricao}}</td>
                        <td style="padding: 12px; color: #666;">{{this.unidade}}</td>
                        <td style="padding: 12px; color: #333; font-weight: 600;">{{this.quantidade}}</td>
                    </tr>
                    {{/each}}
                </tbody>
            </table>
        </div>
        {{else}}
        <p style="color: #999; text-align: center; padding: 20px;">Nenhum material cadastrado para esta obra.</p>
        {{/if}}
    </div>
</div>

