                                    <!-- NOME CLIC√ÅVEL COM DADOS PARA O MODAL -->
                                    <td>
                                        <a href="#"
                                           class="user-link"
                                           data-id="{{id}}"
                                           data-nome="{{escapeAttr nome}}"
                                           data-email="{{escapeAttr email}}"
                                           data-telefone="{{telefone}}"
                                           data-endereco="{{escapeAttr endereco}}"
