                        <a href="/dashboard" class="btn-primary">‚Üê Voltar ao Dashboard</a>
                    </div>
                {{/if}}
            {{else}}
                <div class="empty-state">
                    <div class="empty-icon">üë•</div>
                    <h3>Nenhum usu√°rio encontrado</h3>
                    <p>N√£o h√° usu√°rios cadastrados no sistema.</p>
                    <a href="/dashboard" class="btn-primary">‚Üê Voltar ao Dashboard</a>
                </div>
            {{/if}}
        </div>
    </main>
</div>

<!-- MODAL PARA DETALHES DO USU√ÅRIO -->
<div id="userModal" class="modal">
    <div class="modal-content">
        <span class="close">&times;</span>
        <h2 id="modalTitle">Detalhes do Usu√°rio</h2>

        <div id="userDetails">
            <!-- Conte√∫do ser√° preenchido via JavaScript -->
        </div>
    </div>
</div>

<script src="/js/userModal.js"></script>

<script>
// Autocomplete para busca de usu√°rios
document.addEventListener('DOMContentLoaded', function() {
    const searchInput = document.getElementById('searchInput');
    const sugestoesDatalist = document.getElementById('sugestoesUsuarios');
    let timeout = null;

    if (searchInput && sugestoesDatalist) {
        searchInput.addEventListener('input', function() {
            const termo = this.value.trim();
            
            // Limpar timeout anterior
            clearTimeout(timeout);
            
            // Se termo for muito curto, n√£o buscar
            if (termo.length < 1) {
                sugestoesDatalist.innerHTML = '';
                return;
            }
            
            // Debounce: esperar 300ms antes de buscar
            timeout = setTimeout(function() {
                buscarSugestoes(termo);
            }, 300);
        });
    }

    function buscarSugestoes(termo) {
        fetch(`/dashboard/usuarios/search?q=${encodeURIComponent(termo)}`)
            .then(response => response.json())
            .then(data => {
                sugestoesDatalist.innerHTML = '';
                data.forEach(usuario => {
                    const option = document.createElement('option');
                    option.value = usuario.nome;
                    sugestoesDatalist.appendChild(option);
                });
            })
            .catch(err => {
                console.error('Erro ao buscar sugest√µes:', err);
            });
    }
});
</script>
