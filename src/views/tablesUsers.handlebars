        <!-- TOP BAR -->
        <div class="top-bar">
            <button class="sidebar-toggle">
                <i class="fas fa-bars"></i>
            </button>
            <h1>üë• Usu√°rios Cadastrados</h1>
            <a href="/dashboard" class="btn-primary-top">‚Üê Voltar</a>
        </div>

        <!-- BUSCA DE USU√ÅRIOS -->
        <div class="search-container">
            <form action="/dashboard/usuarios" method="GET" class="search-form">
                <input type="text" name="search" id="searchInput" placeholder="Buscar usu√°rios pelo nome..." value="{{#if search}}{{search}}{{/if}}" autocomplete="off">
                <datalist id="sugestoesUsuarios"></datalist>
                <button type="submit" class="btn-search">Buscar</button>
