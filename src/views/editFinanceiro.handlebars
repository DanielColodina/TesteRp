<div class="financeiro-layout">
  
  <main class="main-content sidebar-closed">
    <div class="top-bar">
      <button class="sidebar-toggle">
        <i class="fas fa-bars"></i>
      </button>
      <h1><i class="fas fa-money-bill-wave"></i> Editar Transa√ß√£o Financeira</h1>
      <a href="/dashboard/controle-grade/financeiro" class="btn-primary-top">‚Üê Voltar</a>
    </div>

    <div class="financeiro-container">
      <div id="form" class="form-section glass-widget">
        <h2>üí≥ Editar Transa√ß√£o</h2>
        <form action="/dashboard/controle-grade/financeiro/edit/{{transacao.id}}" method="POST" class="transacao-form">
          <div class="form-grid">
            <div class="form-group">
              <label for="tipo">Tipo de Transa√ß√£o *</label>
              <select id="tipo" name="tipo" required>
                <option value="receita" {{#if (eq transacao.tipo 'receita')}}selected{{/if}}>‚úÖ Receita</option>
                <option value="despesa" {{#if (eq transacao.tipo 'despesa')}}selected{{/if}}>‚ùå Despesa</option>
              </select>
            </div>

            <div class="form-group">
              <label for="descricao">Descri√ß√£o *</label>
              <input type="text" id="descricao" name="descricao" required placeholder="Ex: Pagamento de cliente" value="{{transacao.descricao}}">
            </div>

            <div class="form-group">
              <label for="valor">Valor (R$) *</label>
              <input type="number" id="valor" name="valor" step="0.01" required placeholder="0.00" value="{{transacao.valor}}">
            </div>

            <div class="form-group">
              <label for="data">Data *</label>
              <input type="date" id="data" name="data" required value="{{transacao.data}}">
            </div>

            <div class="form-group">
              <label for="obra_id">Obra (Opcional)</label>
              <select id="obra_id" name="obra_id">
                <option value="">Sem obra espec√≠fica</option>
                {{#each obras}}
                <option value="{{this.id}}" {{#if (eq this.id ../transacao.obra_id)}}selected{{/if}}>{{this.id}} - {{this.nome}}</option>
                {{/each}}
              </select>
            </div>
          </div>

          <div class="form-actions">
            <button type="submit" class="btn-submit">‚úÖ Salvar Altera√ß√µes</button>
            <a href="/dashboard/controle-grade/financeiro" class="btn-cancel">Cancelar</a>
          </div>
        </form>
      </div>
    </div>
  </main>
</div>

