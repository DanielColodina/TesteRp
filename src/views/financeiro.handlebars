      <h1><i class="fas fa-money-bill-wave"></i> Gest√£o Financeira</h1>
      <a href="/dashboard/controle-geral" class="btn-primary-top">‚Üê Voltar</a>
    </div>

    <div class="financeiro-container">
      <!-- Formul√°rio de Nova Transa√ß√£o -->
      <div id="form" class="form-section glass-widget">
        <h2>üí≥ Registrar Nova Transa√ß√£o</h2>
        <form action="/controle-geral/financeiro" method="POST" class="transacao-form">
          <div class="form-grid">
            <div class="form-group">
              <label for="tipo">Tipo de Transa√ß√£o *</label>
              <select id="tipo" name="tipo" required>
                <option value="">Selecione o tipo...</option>
                <option value="receita">‚úÖ Receita</option>
                <option value="despesa">‚ùå Despesa</option>
              </select>
            </div>

            <div class="form-group">
              <label for="descricao">Descri√ß√£o *</label>
              <input type="text" id="descricao" name="descricao" required placeholder="Ex: Pagamento de cliente">
            </div>

            <div class="form-group">
              <label for="valor">Valor (R$) *</label>
              <input type="number" id="valor" name="valor" step="0.01" required placeholder="0.00">
            </div>

            <div class="form-group">
              <label for="data">Data *</label>
              <input type="date" id="data" name="data" required>
            </div>

            <div class="form-group">
              <label for="obra_id">Obra (Opcional)</label>
              <select id="obra_id" name="obra_id">
                <option value="">Sem obra espec√≠fica</option>
                {{#each obras}}
                <option value="{{this.id}}">{{this.id}} - {{this.nome}}</option>
                {{/each}}
              </select>
            </div>
          </div>

          <div class="form-actions">
            <button type="submit" class="btn-submit">‚úÖ Registrar Transa√ß√£o</button>
            <button type="button" class="btn-cancel" onclick="limparFormulario()">üóëÔ∏è Limpar</button>
          </div>
        </form>
      </div>

      <!-- Lista de Transa√ß√µes -->
      {{#if financeiro}}
        <div class="transacoes-grid">
          {{#each financeiro}}
            <div class="transacao-card glass-widget {{#if (eq this.tipo 'receita')}}transacao-receita{{else}}transacao-despesa{{/if}}">
              <div class="transacao-header">
                <span class="transacao-tipo">{{#if (eq this.tipo 'receita')}}‚úÖ Receita{{else}}‚ùå Despesa{{/if}}</span>
                <span class="transacao-data">{{this.data}}</span>
              </div>

              <div class="transacao-descricao">{{this.descricao}}</div>

              <div class="transacao-valor {{#if (eq this.tipo 'receita')}}valor-receita{{else}}valor-despesa{{/if}}">
                {{#if (eq this.tipo 'receita')}}+ {{else}}- {{/if}}R$ {{this.valor}}
              </div>

              {{#if this.obra_nome}}
                <div class="transacao-obra">
                  <span class="obra-label">üèóÔ∏è Obra:</span>
                  <span class="obra-nome">{{this.obra_nome}}</span>
                </div>
              {{/if}}

              <div class="transacao-actions">
                <a href="/dashboard/controle-geral/financeiro/edit/{{this.id}}" class="btn-action btn-edit">‚úèÔ∏è Editar</a>
                <form action="/dashboard/controle-geral/financeiro/delete/{{this.id}}" method="POST" style="display:inline;">
                  <button type="submit" class="btn-action btn-delete" onclick="return confirm('Tem certeza que deseja remover esta transa√ß√£o?')">üóëÔ∏è Excluir</button>
                </form>
              </div>
            </div>
          {{/each}}
        </div>
      {{else}}
        <div class="empty-state glass-widget">
          <div class="empty-icon">üí∞</div>
          <h3>Nenhuma transa√ß√£o registrada</h3>
