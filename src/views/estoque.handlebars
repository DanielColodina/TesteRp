<div class="estoque-layout">
  <aside class="sidebar sidebar-closed">
    <div class="sidebar-header">
      <div class="logo">RP <i class="fas fa-building"></i></div>
    </div>
    <nav class="sidebar-nav">
      <a href="/dashboard" class="nav-item">
        <i class="fas fa-chart-bar"></i> Dashboard
      </a>
      <a href="/dashboard/usuarios" class="nav-item">
        <i class="fas fa-users"></i> Usuários
      </a>
      <a href="/dashboard/obras" class="nav-item">
        <i class="fas fa-building"></i> Obras
      </a>
      <a href="/dashboard/progresso" class="nav-item">
        <i class="fas fa-chart-line"></i> Progresso
      </a>
      <a href="/dashboard/controle-geral" class="nav-item">
        <i class="fas fa-cogs"></i> Controle
      </a>
      <a href="/dashboard/historico" class="nav-item">
        <i class="fas fa-scroll"></i> Histórico
      </a>
      <a href="/dashboard/auditoria" class="nav-item">
        <i class="fas fa-lock"></i> Auditoria
      </a>
    </nav>
    <div class="sidebar-footer">
      <a href="/logout" class="btn-logout">Sair</a>
    </div>
  </aside>

  <main class="main-content sidebar-closed">
    <div class="top-bar">
      <button class="sidebar-toggle">
        <i class="fas fa-bars"></i>
      </button>
      <h1><i class="fas fa-box"></i> Controle de Estoque</h1>
      <a href="/dashboard/controle-geral" class="btn-primary-top">← Voltar</a>
    </div>

    <div class="estoque-container">
      <!-- Formulário de Novo Material -->
      <div id="form" class="form-section glass-widget">
        <h2><i class="fas fa-plus"></i> Cadastrar Novo Material</h2>
        <form action="/controle-geral/estoque" method="POST" class="material-form">
          <div class="form-grid">
            <div class="form-group">
              <label for="descricao">Descrição *</label>
              <input type="text" id="descricao" name="descricao" required placeholder="Ex: Cimento Portland">
            </div>

            <div class="form-group">
              <label for="unidade">Unidade *</label>
              <select id="unidade" name="unidade" required>
                <option value="">Selecione...</option>
                <option value="kg">Kg</option>
                <option value="m">Metro</option>
                <option value="m2">Metro²</option>
                <option value="m3">Metro³</option>
                <option value="un">Unidade</option>
                <option value="l">Litro</option>
                <option value="t">Tonelada</option>
              </select>
            </div>

            <div class="form-group">
              <label for="quantidade">Quantidade Atual</label>
              <input type="number" id="quantidade" name="quantidade" step="0.01" placeholder="0.00">
            </div>

            <div class="form-group">
              <label for="preco_medio">Preço Médio (R$)</label>
              <input type="number" id="preco_medio" name="preco_medio" step="0.01" placeholder="0.00">
            </div>

            <div class="form-group">
              <label for="estoque_minimo">Estoque Mínimo</label>
              <input type="number" id="estoque_minimo" name="estoque_minimo" step="0.01" placeholder="0.00">
            </div>

            <div class="form-group">
              <label for="obra_id">Obra *</label>
              <select id="obra_id" name="obra_id" required onchange="preencherCodigo()">
                <option value="">Selecione uma obra...</option>
                {{#each obras}}
                <option value="{{this.id}}">{{this.id}} - {{this.nome}}</option>
                {{/each}}
              </select>
            </div>
          </div>

          <div class="form-actions">
            <button type="submit" class="btn-submit"><i class="fas fa-save"></i> Salvar Material</button>
            <button type="button" class="btn-cancel" onclick="limparFormulario()"><i class="fas fa-trash"></i> Limpar</button>
          </div>
        </form>
      </div>

      <!-- Lista de Materiais -->
      {{#if materiais}}
        <div class="materiais-grid">
          {{#each materiais}}
            <div class="material-card glass-widget">
              <div class="material-header">
                <h3 class="material-title">{{this.descricao}}</h3>
                <span class="material-codigo">{{this.codigo}}</span>
              </div>

              <div class="material-info">
                <div class="material-info-item">
                  <span class="material-info-label">Unidade</span>
                  <span class="material-info-value">{{this.unidade}}</span>
                </div>
                <div class="material-info-item">
                  <span class="material-info-label">Quantidade</span>
                  <span class="material-info-value">{{this.quantidade}}</span>
                </div>
                <div class="material-info-item">
                  <span class="material-info-label">Preço Médio</span>
                  <span class="material-info-value">R$ {{this.preco_medio}}</span>
                </div>
                <div class="material-info-item">
                  <span class="material-info-label">Estoque Mínimo</span>
                  <span class="material-info-value">{{this.estoque_minimo}}</span>
                </div>
                <div class="material-info-item">
                  <span class="material-info-label">Status</span>
                  <span class="estoque-status {{#if (gt this.quantidade this.estoque_minimo)}}estoque-alto{{else if (eq this.quantidade this.estoque_minimo)}}estoque-medio{{else}}estoque-baixo{{/if}}">
                    {{#if (gt this.quantidade this.estoque_minimo)}}Estoque Alto{{else if (eq this.quantidade this.estoque_minimo)}}Estoque Médio{{else}}Estoque Baixo{{/if}}
                  </span>
                </div>
              </div>

              <div class="material-actions">
                <a href="/dashboard/controle-geral/estoque/edit/{{this.id}}" class="btn-action btn-edit"><i class="fas fa-edit"></i> Editar</a>
                <form action="/dashboard/controle-geral/estoque/delete/{{this.id}}" method="POST" style="display:inline;">
                  <button type="submit" class="btn-action btn-delete" onclick="return confirm('Tem certeza que deseja excluir este material?')"><i class="fas fa-trash"></i> Excluir</button>
                </form>
              </div>
            </div>
          {{/each}}
        </div>
      {{else}}
        <div class="empty-state glass-widget">
          <div class="empty-icon"><i class="fas fa-box"></i></div>
          <h3>Nenhum material cadastrado ainda</h3>
          <p>Clique em "Cadastrar Novo Material" acima para começar.</p>
        </div>
      {{/if}}
    </div>
  </main>
</div>

<style>
