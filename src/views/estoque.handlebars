}

@media (max-width: 480px) {
  .sidebar { width: 60px; }
  .main-content { margin-left: 60px; }
  .top-bar { padding: 15px; gap: 10px; }
  .top-bar h1 { font-size: 1.3rem; }
  .estoque-container { padding: 15px; }
  .material-info { grid-template-columns: 1fr; }
}
</style>

<script>
const obrasData = [
{{#each obras}}
    {
        id: {{this.id}},
        nome: "{{this.nome}}",
        endereco: "{{this.endereco}}",
        cliente: "{{this.cliente}}",
        orcamento: {{this.orcamento}},
        data_inicio: "{{this.data_inicio}}",
        data_fim: "{{this.data_fim}}",
        status: "{{this.status}}"
    }{{#unless @last}},{{/unless}}
{{/each}}
];

function preencherCodigo() {
    const select = document.getElementById('obra_id');
    const obraId = select.value;
    const obra = obrasData.find(o => o.id == obraId);
    if (obra) {
        document.getElementById('codigo').value = obra.id;
    } else {
        document.getElementById('codigo').value = '';
    }
}

function limparFormulario() {
    document.querySelector('.material-form').reset();
    preencherCodigo();
}
</script>
