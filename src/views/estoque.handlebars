  margin-bottom: 40px;
}

.form-section h2 {
  margin-top: 0;
  color: var(--yellow-primary);
  font-size: 1.4rem;
  margin-bottom: 25px;
}

.form-grid {
  display: grid;
  grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
  gap: 20px;
