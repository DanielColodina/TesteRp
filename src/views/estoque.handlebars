  background: rgba(255, 255, 255, 0.05);
  color: var(--text-primary);
  transition: all 0.3s;
}

.form-group input::placeholder {
  color: var(--text-secondary);
}

.form-group input:focus,
.form-group select:focus {
  outline: none;
  border-color: var(--yellow-primary);
  background: rgba(255, 195, 0, 0.05);
  box-shadow: 0 0 0 3px rgba(255, 195, 0, 0.1);
}

.form-actions {
  display: flex;
  gap: 15px;
  margin-top: 25px;
}

.btn-submit {
  padding: 12px 24px;
  background: linear-gradient(135deg, var(--yellow-primary) 0%, var(--yellow-hover) 100%);
  color: var(--bg-dark);
  border: none;
  border-radius: 8px;
  font-weight: 700;
  cursor: pointer;
  transition: all 0.3s;
  box-shadow: 0 4px 15px rgba(255, 195, 0, 0.25);
}

.btn-submit:hover {
  transform: translateY(-2px);
  box-shadow: 0 6px 20px rgba(255, 195, 0, 0.35);
}

.btn-cancel {
  padding: 12px 24px;
  background: rgba(255, 195, 0, 0.1);
  color: var(--yellow-primary);
  border: 1px solid rgba(255, 195, 0, 0.3);
  border-radius: 8px;
  font-weight: 700;
  cursor: pointer;
  transition: all 0.3s;
}

.btn-cancel:hover {
  background: rgba(255, 195, 0, 0.15);
  border-color: var(--yellow-primary);
}

/* ===== MATERIAIS GRID ===== */
.materiais-grid {
  display: grid;
  grid-template-columns: repeat(auto-fill, minmax(320px, 1fr));
  gap: 25px;
}

.material-card {
  display: flex;
  flex-direction: column;
  padding: 25px;
}

.material-header {
  display: flex;
  justify-content: space-between;
  align-items: flex-start;
  margin-bottom: 20px;
}

.material-title {
  font-size: 1.2rem;
  font-weight: 700;
  margin: 0;
  color: var(--yellow-primary);
}

.material-codigo {
  background: rgba(255, 195, 0, 0.15);
  color: var(--yellow-primary);
  padding: 4px 12px;
  border-radius: 20px;
  font-size: 0.75rem;
  font-weight: 600;
  text-transform: uppercase;
  letter-spacing: 0.5px;
}

.material-info {
  display: grid;
  grid-template-columns: repeat(2, 1fr);
  gap: 15px;
  margin-bottom: 20px;
  padding-bottom: 20px;
  border-bottom: 1px solid rgba(255, 195, 0, 0.1);
}

.material-info-item {
  display: flex;
  flex-direction: column;
}

.material-info-label {
  font-size: 0.8rem;
  color: var(--text-secondary);
  font-weight: 600;
  text-transform: uppercase;
  letter-spacing: 0.5px;
  margin-bottom: 4px;
}

.material-info-value {
  font-size: 0.95rem;
  color: var(--text-primary);
  font-weight: 600;
}

.estoque-status {
  display: inline-block;
  padding: 6px 12px;
  border-radius: 6px;
  font-size: 0.8rem;
  font-weight: 700;
  text-transform: uppercase;
  letter-spacing: 0.5px;
}

.estoque-alto {
  background: rgba(16, 185, 129, 0.2);
  color: #10b981;
}

.estoque-medio {
  background: rgba(245, 158, 11, 0.2);
  color: #f59e0b;
}

.estoque-baixo {
  background: rgba(239, 68, 68, 0.2);
  color: #ef4444;
}

.material-actions {
  display: flex;
  gap: 12px;
}

.btn-action {
  flex: 1;
  padding: 10px 16px;
  border: none;
  border-radius: 8px;
  font-weight: 700;
  cursor: pointer;
  text-decoration: none;
  text-align: center;
  transition: all 0.3s;
  font-size: 0.9rem;
}

.btn-edit {
  background: rgba(255, 195, 0, 0.2);
  color: var(--yellow-primary);
  border: 1px solid rgba(255, 195, 0, 0.3);
}

.btn-edit:hover {
  background: rgba(255, 195, 0, 0.3);
  transform: translateY(-2px);
}

.btn-delete {
  background: rgba(239, 68, 68, 0.2);
  color: #ef4444;
  border: 1px solid rgba(239, 68, 68, 0.3);
}

.btn-delete:hover {
  background: rgba(239, 68, 68, 0.3);
  transform: translateY(-2px);
}

/* ===== EMPTY STATE ===== */
.empty-state {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 60px 40px;
  text-align: center;
  min-height: 300px;
}

.empty-icon {
  font-size: 4rem;
  margin-bottom: 20px;
}

.empty-state h3 {
  color: var(--text-primary);
  font-size: 1.5rem;
  margin: 0 0 10px 0;
}

.empty-state p {
  color: var(--text-secondary);
  font-size: 1rem;
  margin: 0;
}

/* ===== CUSTOM SCROLLBAR ===== */
.main-content::-webkit-scrollbar {
  width: 8px;
}

.main-content::-webkit-scrollbar-track {
  background: rgba(0, 0, 0, 0.2);
  border-radius: 10px;
}

.main-content::-webkit-scrollbar-thumb {
  background: linear-gradient(180deg, var(--yellow-primary) 0%, var(--yellow-hover) 100%);
  border-radius: 10px;
}

.main-content::-webkit-scrollbar-thumb:hover {
  background: var(--yellow-primary);
}

/* ===== RESPONSIVE ===== */
