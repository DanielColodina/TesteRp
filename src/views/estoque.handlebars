  -webkit-text-fill-color: transparent;
  background-clip: text;
  font-weight: 800;
}

.btn-primary-top {
  padding: 10px 20px;
  background: linear-gradient(135deg, var(--yellow-primary) 0%, var(--yellow-hover) 100%);
  color: var(--bg-dark);
  text-decoration: none;
  border-radius: 8px;
  font-weight: 700;
  border: none;
  cursor: pointer;
  transition: all 0.3s;
  box-shadow: 0 4px 15px rgba(255, 195, 0, 0.25);
}

.btn-primary-top:hover {
  transform: translateY(-2px);
  box-shadow: 0 6px 20px rgba(255, 195, 0, 0.35);
}

/* ===== ESTOQUE CONTAINER ===== */
