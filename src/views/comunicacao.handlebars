<div class="comunicacao-layout">
  <aside class="sidebar sidebar-closed">
    <div class="sidebar-header">
      <div class="logo">RP <i class="fas fa-building"></i></div>
    </div>
    <nav class="sidebar-nav">
      <a href="/dashboard" class="nav-item">
        <i class="fas fa-chart-bar"></i> Dashboard
      </a>
      <a href="/dashboard/usuarios" class="nav-item">
        <i class="fas fa-users"></i> Usu√°rios
      </a>
      <a href="/dashboard/obras" class="nav-item">
        <i class="fas fa-building"></i> Obras
      </a>
      <a href="/dashboard/progresso" class="nav-item">
        <i class="fas fa-chart-line"></i> Progresso
      </a>
      <a href="/dashboard/controle-geral" class="nav-item">
        <i class="fas fa-cogs"></i> Controle
      </a>
      <a href="/dashboard/historico" class="nav-item">
        <i class="fas fa-scroll"></i> Hist√≥rico
      </a>
      <a href="/dashboard/auditoria" class="nav-item">
        <i class="fas fa-lock"></i> Auditoria
      </a>
    </nav>
    <div class="sidebar-footer">
      <button class="btn-sidebar-action" title="Sair"><i class="fas fa-sign-out-alt"></i><span>Logout</span></button>
    </div>
  </aside>

  <main class="main-content sidebar-closed">
    <div class="top-bar">
      <button class="sidebar-toggle">
        <i class="fas fa-bars"></i>
      </button>
      <h1>üí¨ Sistema de Comunica√ß√£o</h1>
      <a href="/dashboard/controle-geral" class="btn-primary-top">‚Üê Voltar</a>
    </div>

    <div class="comunicacao-container">
      <!-- Formul√°rio de Nova Mensagem -->
      <div id="form" class="form-section glass-widget">
        <h2>üìù Enviar Nova Mensagem</h2>
        <form action="/controle-geral/comunicacao" method="POST" class="mensagem-form">
          <div class="form-grid">
            <div class="form-group">
              <label for="de">De *</label>
              <input type="text" id="de" name="de" required placeholder="Ex: Jo√£o Silva">
            </div>

            <div class="form-group">
              <label for="para">Para *</label>
              <input type="text" id="para" name="para" required placeholder="Ex: Maria Santos">
            </div>

            <div class="form-group">
              <label for="data">Data *</label>
              <input type="date" id="data" name="data" required>
            </div>

            <div class="form-group">
              <label for="obra_id">Obra (opcional)</label>
              <select id="obra_id" name="obra_id">
                <option value="">Selecione uma obra...</option>
                {{#each obras}}
                <option value="{{this.id}}">{{this.nome}}</option>
                {{/each}}
              </select>
            </div>

            <div class="form-group" style="grid-column: 1 / -1;">
              <label for="mensagem">Mensagem *</label>
              <textarea id="mensagem" name="mensagem" required placeholder="Digite sua mensagem aqui..."></textarea>
            </div>
          </div>

          <div class="form-actions">
            <button type="submit" class="btn-submit">‚úÖ Enviar Mensagem</button>
            <button type="button" class="btn-cancel" onclick="limparFormulario()">üóëÔ∏è Limpar</button>
          </div>
        </form>
      </div>

      <!-- Lista de Mensagens -->
      {{#if mensagens}}
        <div class="mensagens-grid">
          {{#each mensagens}}
            <div class="mensagem-card glass-widget">
              <div class="mensagem-header">
                <h3 class="mensagem-remetente">{{this.de}}</h3>
                <span class="mensagem-destinatario">‚Üí {{this.para}}</span>
              </div>

              <div class="mensagem-conteudo">
                {{this.mensagem}}
              </div>

              <div class="mensagem-footer">
                <div class="mensagem-info-item">
                  <span class="mensagem-info-label">üìÖ Data:</span>
                  <span class="mensagem-info-value">{{this.data}}</span>
                </div>
                {{#if this.obra_nome}}
                  <div class="mensagem-info-item">
                    <span class="mensagem-info-label">üèóÔ∏è Obra:</span>
                    <span class="mensagem-info-value">{{this.obra_nome}}</span>
                  </div>
                {{/if}}
              </div>
            </div>
          {{/each}}
        </div>
      {{else}}
        <div class="empty-state glass-widget">
          <div class="empty-icon">üí¨</div>
          <h3>Nenhuma mensagem enviada</h3>
          <p>Clique em "Enviar Nova Mensagem" acima para come√ßar a comunica√ß√£o.</p>
        </div>
      {{/if}}
    </div>
  </main>
</div>

<style>
/* ===== PALETA DE CORES ===== */
:root {
  --bg-dark: #0A0A0A;
  --bg-darker: #1a1a1a;
  --glass-bg: rgba(30, 30, 30, 0.4);
  --glass-hover: rgba(30, 30, 30, 0.55);
  --yellow-primary: #FFC300;
  --yellow-hover: #FFD700;
  --text-primary: #FFFFFF;
  --text-secondary: #B0B0B0;
  --glass-border: rgba(255, 255, 255, 0.08);
}

/* ===== GLASS WIDGET BASE ===== */
.glass-widget {
  background: var(--glass-bg);
  backdrop-filter: blur(12px);
  -webkit-backdrop-filter: blur(12px);
  border: 1px solid var(--glass-border);
  box-shadow: 0 8px 32px 0 rgba(0, 0, 0, 0.37);
  border-radius: 16px;
  padding: 20px;
  transition: all 0.4s cubic-bezier(0.4, 0, 0.2, 1);
}

.glass-widget:hover {
  background: var(--glass-hover);
  border: 1px solid rgba(255, 195, 0, 0.15);
  box-shadow: 0 12px 40px 0 rgba(255, 195, 0, 0.15);
  transform: translateY(-4px);
}

/* ===== LAYOUT PRINCIPAL ===== */
.comunicacao-layout {
  display: flex;
  min-height: 100vh;
  background: linear-gradient(135deg, var(--bg-dark) 0%, var(--bg-darker) 100%);
  font-family: Inter, Roboto, Poppins, sans-serif;
  color: var(--text-primary);
}

/* ===== SIDEBAR ===== */
.sidebar {
  width: 280px;
  background: rgba(15, 15, 15, 0.8);
  backdrop-filter: blur(10px);
  -webkit-backdrop-filter: blur(10px);
  border-right: 2px solid var(--yellow-primary);
  position: fixed;
  height: 100vh;
  left: 0;
  top: 0;
  z-index: 999;
  display: flex;
  flex-direction: column;
  overflow-y: auto;
}

.sidebar-header {
  padding: 30px 20px;
  text-align: center;
  border-bottom: 1px solid rgba(255, 195, 0, 0.2);
}

.logo {
  font-size: 1.8rem;
  font-weight: 800;
  background: linear-gradient(135deg, var(--yellow-primary) 0%, var(--yellow-hover) 100%);
  -webkit-background-clip: text;
  -webkit-text-fill-color: transparent;
  background-clip: text;
}

.sidebar-nav {
  flex: 1;
  display: flex;
  flex-direction: column;
  gap: 8px;
  padding: 20px 10px;
}

.nav-item {
  display: flex;
  align-items: center;
  gap: 12px;
  padding: 12px 16px;
  color: var(--text-secondary);
  text-decoration: none;
  border-radius: 8px;
  transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
  font-weight: 500;
}

.nav-item:hover,
.nav-item.active {
  background: rgba(255, 195, 0, 0.1);
  color: var(--yellow-primary);
  border-left: 3px solid var(--yellow-primary);
  padding-left: 13px;
}

.nav-item span {
  font-size: 1.2rem;
}

.sidebar-footer {
  padding: 20px 10px;
  border-top: 1px solid rgba(255, 195, 0, 0.2);
}

.btn-logout {
  display: block;
  padding: 12px 16px;
  background: rgba(255, 67, 67, 0.1);
  color: #FF6B6B;
  border-radius: 8px;
  text-decoration: none;
  text-align: center;
  font-weight: 600;
  transition: all 0.3s;
}

.btn-logout:hover {
  background: rgba(255, 67, 67, 0.2);
  transform: translateY(-2px);
}

/* ===== MAIN CONTENT ===== */
.main-content {
  flex: 1;
  margin-left: 280px;
  overflow-y: auto;
  background: linear-gradient(135deg, var(--bg-dark) 0%, var(--bg-darker) 100%);
}

.top-bar {
  position: sticky;
  top: 0;
  z-index: 100;
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 30px 40px;
  background: rgba(10, 10, 10, 0.6);
  backdrop-filter: blur(10px);
  -webkit-backdrop-filter: blur(10px);
  border-bottom: 1px solid rgba(255, 195, 0, 0.1);
}

.top-bar h1 {
  margin: 0;
  font-size: 2rem;
  background: linear-gradient(135deg, var(--yellow-primary) 0%, var(--yellow-hover) 100%);
  -webkit-background-clip: text;
  -webkit-text-fill-color: transparent;
  background-clip: text;
  font-weight: 800;
}

.btn-primary-top {
  padding: 10px 20px;
  background: linear-gradient(135deg, var(--yellow-primary) 0%, var(--yellow-hover) 100%);
  color: var(--bg-dark);
  text-decoration: none;
  border-radius: 8px;
  font-weight: 700;
  border: none;
  cursor: pointer;
  transition: all 0.3s;
  box-shadow: 0 4px 15px rgba(255, 195, 0, 0.25);
}

.btn-primary-top:hover {
  transform: translateY(-2px);
  box-shadow: 0 6px 20px rgba(255, 195, 0, 0.35);
}

/* ===== COMUNICACAO CONTAINER ===== */
.comunicacao-container {
  padding: 40px;
  max-width: 1400px;
  margin: 0 auto;
  width: 100%;
}

.form-section {
  margin-bottom: 40px;
}

.form-section h2 {
  margin-top: 0;
  color: var(--yellow-primary);
  font-size: 1.4rem;
  margin-bottom: 25px;
}

.form-grid {
  display: grid;
  grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
  gap: 20px;
}

.form-group {
  display: flex;
  flex-direction: column;
}

.form-group label {
  font-weight: 600;
  color: var(--yellow-primary);
  margin-bottom: 8px;
  font-size: 0.9rem;
  text-transform: uppercase;
  letter-spacing: 0.5px;
}

.form-group input,
.form-group select,
.form-group textarea {
  padding: 12px 15px;
  border: 1px solid rgba(255, 195, 0, 0.2);
  border-radius: 8px;
  font-size: 1rem;
  background: rgba(255, 255, 255, 0.05);
  color: var(--text-primary);
  transition: all 0.3s;
  font-family: Inter, Roboto, Poppins, sans-serif;
}

.form-group input::placeholder,
.form-group textarea::placeholder {
  color: var(--text-secondary);
}

.form-group input:focus,
.form-group select:focus,
.form-group textarea:focus {
  outline: none;
  border-color: var(--yellow-primary);
  background: rgba(255, 195, 0, 0.05);
  box-shadow: 0 0 0 3px rgba(255, 195, 0, 0.1);
}

.form-group textarea {
  resize: vertical;
  min-height: 120px;
}

.form-actions {
  display: flex;
  gap: 15px;
  margin-top: 25px;
}

.btn-submit {
  padding: 12px 24px;
  background: linear-gradient(135deg, var(--yellow-primary) 0%, var(--yellow-hover) 100%);
  color: var(--bg-dark);
  border: none;
  border-radius: 8px;
  font-weight: 700;
  cursor: pointer;
  transition: all 0.3s;
  box-shadow: 0 4px 15px rgba(255, 195, 0, 0.25);
}

.btn-submit:hover {
  transform: translateY(-2px);
  box-shadow: 0 6px 20px rgba(255, 195, 0, 0.35);
}

.btn-cancel {
  padding: 12px 24px;
  background: rgba(255, 195, 0, 0.1);
  color: var(--yellow-primary);
  border: 1px solid rgba(255, 195, 0, 0.3);
  border-radius: 8px;
  font-weight: 700;
  cursor: pointer;
  transition: all 0.3s;
}

.btn-cancel:hover {
  background: rgba(255, 195, 0, 0.15);
  border-color: var(--yellow-primary);
}

/* ===== MENSAGENS GRID ===== */
.mensagens-grid {
  display: grid;
  grid-template-columns: repeat(auto-fill, minmax(350px, 1fr));
  gap: 25px;
}

.mensagem-card {
  display: flex;
  flex-direction: column;
  padding: 25px;
  position: relative;
  overflow: hidden;
}

.mensagem-card::before {
  content: '';
  position: absolute;
  top: 0;
  left: 0;
  width: 4px;
  height: 100%;
  background: linear-gradient(180deg, var(--yellow-primary), var(--yellow-hover));
  border-radius: 16px 0 0 16px;
}

.mensagem-header {
  display: flex;
  justify-content: space-between;
  align-items: flex-start;
  margin-bottom: 15px;
}

.mensagem-remetente {
  font-size: 1.1rem;
  font-weight: 700;
  margin: 0;
  color: var(--yellow-primary);
}

.mensagem-destinatario {
  background: rgba(255, 195, 0, 0.15);
  color: var(--yellow-primary);
  padding: 6px 12px;
  border-radius: 20px;
  font-size: 0.75rem;
  font-weight: 600;
  text-transform: uppercase;
  letter-spacing: 0.5px;
}

.mensagem-conteudo {
  padding: 15px;
  background: rgba(255, 195, 0, 0.08);
  border-left: 3px solid var(--yellow-primary);
  border-radius: 6px;
  margin-bottom: 15px;
  font-size: 0.95rem;
  line-height: 1.6;
  color: var(--text-primary);
  flex: 1;
}

.mensagem-footer {
  display: flex;
  flex-direction: column;
  gap: 10px;
  padding-top: 15px;
  border-top: 1px solid rgba(255, 195, 0, 0.1);
}

.mensagem-info-item {
  display: flex;
  align-items: center;
  gap: 8px;
  font-size: 0.85rem;
}

.mensagem-info-label {
  color: var(--text-secondary);
  font-weight: 600;
}

.mensagem-info-value {
  color: var(--text-primary);
  font-weight: 600;
}

/* ===== EMPTY STATE ===== */
.empty-state {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 60px 40px;
  text-align: center;
  min-height: 300px;
}

.empty-icon {
  font-size: 4rem;
  margin-bottom: 20px;
}

.empty-state h3 {
  color: var(--text-primary);
  font-size: 1.5rem;
  margin: 0 0 10px 0;
}

.empty-state p {
  color: var(--text-secondary);
  font-size: 1rem;
  margin: 0;
}

/* ===== CUSTOM SCROLLBAR ===== */
.main-content::-webkit-scrollbar {
  width: 8px;
}

.main-content::-webkit-scrollbar-track {
  background: rgba(0, 0, 0, 0.2);
  border-radius: 10px;
}

.main-content::-webkit-scrollbar-thumb {
  background: linear-gradient(180deg, var(--yellow-primary) 0%, var(--yellow-hover) 100%);
  border-radius: 10px;
}

.main-content::-webkit-scrollbar-thumb:hover {
  background: var(--yellow-primary);
}

/* ===== RESPONSIVE ===== */
@media (max-width: 1024px) {
  .top-bar { padding: 20px 30px; }
  .comunicacao-container { padding: 30px; }
}

@media (max-width: 768px) {
  .sidebar { width: 70px; }
  .main-content { margin-left: 70px; }
  .sidebar-header { padding: 20px 10px; }
  .logo { font-size: 1.2rem; }
  .nav-item span { font-size: 1rem; }
  .nav-item { justify-content: center; padding: 12px 8px; }
  .top-bar { flex-direction: column; gap: 15px; padding: 20px; }
  .top-bar h1 { font-size: 1.5rem; }
  .form-grid { grid-template-columns: 1fr; }
  .mensagens-grid { grid-template-columns: 1fr; }
}

@media (max-width: 480px) {
  .sidebar { width: 60px; }
  .main-content { margin-left: 60px; }
  .top-bar { padding: 15px; gap: 10px; }
  .top-bar h1 { font-size: 1.3rem; }
  .comunicacao-container { padding: 15px; }
}
</style>

<script>
function limparFormulario() {
    document.querySelector('.mensagem-form').reset();
}
</script>

