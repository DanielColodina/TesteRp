<link rel="stylesheet" href="/css/dashboard-progresso.css?v=2.1">

<div class="app-layout">
  <main class="main-content">
    <div class="top-bar">
      <h1>?? Registro Obras - Todas as Obras</h1>
      <a href="/obras" class="btn btn-secondary">? Voltar às Obras</a>
    </div>

    <div class="app-container">
      {{#if obras}}
        <!-- LISTA DE OBRAS EXPANDÍVEIS -->
        <div class="accordion">
          {{#each obras}}
            <div class="accordion-item">
              <button class="accordion-header" onclick="toggleAccordion(this)">
                <span class="obra-title">
                  <strong>{{nome_obra}}</strong>
                  <span class="obra-cliente">{{cliente_nome}}</span>
                </span>
                <span class="accordion-icon">?</span>
              </button>
              
              <div class="accordion-content">
                <!-- INFORMAÇÕES DA OBRA -->
                <div class="info-section">
                  <h3>?? Informações da Obra</h3>
                  <div class="info-grid">
                    <div class="info-item">
                      <label>Endereço:</label>
                      <span>{{endereco_obra}}</span>
                    </div>
                    <div class="info-item">
                      <label>Data de Criação:</label>
                      <span>{{created_at}}</span>
                    </div>
                  </div>
                </div>

                <!-- INFORMAÇÕES DO CLIENTE/USUÁRIO -->
                <div class="info-section">
                  <h3>?? Informações do Cliente</h3>
                  <div class="info-grid">
                    <div class="info-item">
                      <label>Nome:</label>
                      <span>{{cliente_nome}}</span>
                    </div>
                    <div class="info-item">
                      <label>Email:</label>
                      <span>{{cliente_email}}</span>
                    </div>
                    <div class="info-item">
                      <label>Telefone:</label>
                      <span>{{cliente_telefone}}</span>
                    </div>
                    <div class="info-item">
                      <label>Endereço do Cliente:</label>
                      <span>{{cliente_endereco}}</span>
                    </div>
                  </div>
                </div>

                <!-- PROGRESSO E CHECKLIST -->
                <div class="info-section">
                  <h3>?? Progresso e Checklist</h3>
                  <div class="progress-overview">
                    <div class="progress-bar-container large">
                      <div class="progress-bar" style="width: {{progresso}}%;">
                        <span class="progress-text">{{progresso}}%</span>
                      </div>
                    </div>
                  </div>
                  
                  <div class="checklist-grid">
                    <div class="checklist-item {{status_uso_solo}}">
                      <span class="checklist-icon">{{#if (eq status_uso_solo 'Feito')}}?{{else if (eq status_uso_solo 'Andamento')}}?{{else}}??{{/if}}</span>
                      <span>Uso do Solo</span>
                      <span class="checklist-status">{{status_uso_solo}}</span>
                    </div>
                    <div class="checklist-item {{status_licenca}}">
                      <span class="checklist-icon">{{#if (eq status_licenca 'Feito')}}?{{else if (eq status_licenca 'Andamento')}}?{{else}}??{{/if}}</span>
                      <span>Licença</span>
                      <span class="checklist-status">{{status_licenca}}</span>
                    </div>
                    <div class="checklist-item {{status_condominio}}">
                      <span class="checklist-icon">{{#if (eq status_condominio 'Feito')}}?{{else if (eq status_condominio 'Andamento')}}?{{else}}??{{/if}}</span>
                      <span>Condomínio</span>
                      <span class="checklist-status">{{status_condominio}}</span>
                    </div>
                    <div class="checklist-item {{status_habite_se}}">
                      <span class="checklist-icon">{{#if (eq status_habite_se 'Feito')}}?{{else if (eq status_habite_se 'Andamento')}}?{{else}}??{{/if}}</span>
                      <span>Habite-se</span>
                      <span class="checklist-status">{{status_habite_se}}</span>
                    </div>
                    <div class="checklist-item {{status_averbacao}}">
                      <span class="checklist-icon">{{#if (eq status_averbacao 'Feito')}}?{{else if (eq status_averbacao 'Andamento')}}?{{else}}??{{/if}}</span>
                      <span>Averbação</span>
                      <span class="checklist-status">{{status_averbacao}}</span>
                    </div>
                    <div class="checklist-item {{status_vistoria}}">
                      <span class="checklist-icon">{{#if (eq status_vistoria 'Feito')}}?{{else if (eq status_vistoria 'Andamento')}}?{{else}}??{{/if}}</span>
                      <span>Vistoria</span>
                      <span class="checklist-status">{{status_vistoria}}</span>
                    </div>
                  </div>
                </div>

                <!-- MATERIAIS DA OBRA -->
                <div class="info-section">
                  <div class="section-header">
                    <h3>?? Materiais da Obra</h3>
                    <a href="/dashboard/controle-grade/estoque?obra_id={{id}}" class="btn-add" title="Adicionar Material">+</a>
                  </div>
                  {{#if materiais}}
                    <div class="materiais-list">
                      {{#each materiais}}
                        <div class="material-item">
                          <div class="material-info">
                            <strong>{{material_nome}}</strong>
                            <span class="material-quantidade">Saldo: {{saldo_atual}} {{unidade}}</span>
                          </div>
                          <span class="material-fase">{{fase_obra}}</span>
                        </div>
                      {{/each}}
                    </div>
                  {{else}}
                    <p class="no-data">Nenhum material vinculado a esta obra.</p>
                  {{/if}}
                </div>

                <!-- FUNCIONÁRIOS DA OBRA -->
                <div class="info-section">
                  <div class="section-header">
                    <h3>?? Funcionários da Obra</h3>
                    <a href="/dashboard/controle-grade/equipes?obra_id={{id}}" class="btn-add" title="Adicionar Funcionário">+</a>
                  </div>
                  {{#if funcionarios}}
                    <div class="funcionarios-list">
                      {{#each funcionarios}}
                        <div class="funcionario-item">
                          <div class="funcionario-info">
                            <strong>{{nome}}</strong>
                            <span class="funcionario-funcao">{{funcao}}</span>
                          </div>
                        </div>
                      {{/each}}
                    </div>
                  {{else}}
                    <p class="no-data">Nenhum funcionário vinculado a esta obra.</p>
                  {{/if}}
                </div>

                <!-- FINANCEIRO DA OBRA -->
                <div class="info-section">
                  <div class="section-header">
                    <h3>?? Financeiro da Obra</h3>
                    <a href="/dashboard/controle-grade/financeiro?obra_id={{id}}" class="btn-add" title="Adicionar Transação">+</a>
                  </div>
                  
                  <!-- Resumo Financeiro -->
                  <div class="financeiro-resumo">
                    <div class="resumo-item ganho">
                      <span class="resumo-label">?? Ganhos</span>
                      <span class="resumo-valor">R$ {{totalGanhos}}</span>
                    </div>
                    <div class="resumo-item despesa">
                      <span class="resumo-label">?? Despesas</span>
                      <span class="resumo-valor">R$ {{totalDespesas}}</span>
                    </div>
                    <div class="resumo-item saldo">
                      <span class="resumo-label">?? Saldo</span>
                      <span class="resumo-valor">R$ {{math totalGanhos '-' totalDespesas}}</span>
                    </div>
                  </div>
                  
                  {{#if lancamentosFinanceiro}}
                    <div class="financeiro-list">
                      {{#each lancamentosFinanceiro}}
                        <div class="financeiro-item {{tipo}}">
                          <div class="financeiro-info">
                            <strong>{{descricao}}</strong>
                            <span class="financeiro-tipo">{{tipo}}</span>
                          </div>
                          <div class="financeiro-valores">
                            <span class="financeiro-valor {{tipo}}">{{#if (eq tipo 'entrada')}}+{{else}}-{{/if}}R$ {{valor}}</span>
                            <span class="financeiro-data">{{data}}</span>
                          </div>
                        </div>
                      {{/each}}
                    </div>
                  {{else}}
                    <p class="no-data">Nenhum lançamento financeiro registrado.</p>
                  {{/if}}
                </div>

                <!-- HISTÓRICO DA OBRA -->
                <div class="info-section">
                  <h3>?? Histórico da Obra</h3>
                  {{#if historico}}
                    <div class="historico-list">
                      {{#each historico}}
                        <div class="historico-item">
                          <div class="historico-header">
                            <strong>{{tipo}}</strong>
                            <span class="historico-data">{{created_at}}</span>
                          </div>
                          <p>{{descricao}}</p>
                          <small>Por: {{admin_nome}}</small>
                        </div>
                      {{/each}}
                    </div>
                  {{else}}
                    <p class="no-data">Nenhum registro no histórico.</p>
                  {{/if}}
                </div>
              </div>
            </div>
          {{/each}}
        </div>
      {{else}}
        <div class="empty-state glass-widget">
          <div class="empty-icon">??</div>
          <h3>Nenhuma obra cadastrada</h3>
          <p>Não há obras para exibir.</p>
        </div>
      {{/if}}
    </div>
  </main>
</div>

<style>
