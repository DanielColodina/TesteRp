  border-collapse: collapse;
  color: var(--text-primary);
}

.progress-table thead {
  background: rgba(255, 195, 0, 0.1);
}

.progress-table th {
  padding: 15px;
  text-align: left;
  font-weight: 600;
  color: var(--yellow-primary);
  font-size: 0.9rem;
  text-transform: uppercase;
